@model IEnumerable<Movie>

@{
ViewData["Title"] = "Home Page";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Welcome to Movie Lovers</h1>
        <p class="lead">The website for all the movie enthusiasts out there!</p>
    </div>
</div>
<h2>Movies</h2>
<div class="row">
    <div class="col-md-12 text-right">
        <a asp-controller="Home" asp-action="Add" class="btn btn-primary">Add Movie</a>
    </div>
</div>
<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@movie.Poster" alt="@movie.Title">
                <div class="card-body">
                    <h3>@movie.Title</h3>
                    <p class="card-text">@movie.Description</p>
                    <div class="d-flex justify-content-between align-items-center btn-group">
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <form asp-controller="Home" asp-action="Delete" asp-route-id="@movie.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div> 