@model Movie

@{
    ViewData["Title"] = "Add Movie";
}

<h2>Add Movie</h2>

<form asp-controller="Home" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="Title" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="Description" rows="3" placeholder="Enter description"></textarea>
    </div>
    <div class="form-group">
        <label for="director">Director</label>
        <input type="text" class="form-control" id="director" name="Director" placeholder="Enter director">
    </div>
    <div class="form-group">
        <label for="poster">Poster</label>
        <input type="file" class="form-control-file" id="poster" name="PosterFile">
    </div>
    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>

